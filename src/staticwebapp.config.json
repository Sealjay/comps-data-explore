{
    "trailingSlash": "auto",
    "platform": {
        "apiRuntime": "python:3.9"
    },
    "routes": [
        { "route": "/.well-known/*", "allowedRoles": ["anonymous"] },
        {
            "route": "/api/content/*",
            "headers": {
                "cache-control": "must-revalidate, max-age=15770000"
            },
            "allowedRoles": ["authenticated"]
        },
        {
            "route": "/api/contentoriginal/*",
            "headers": {
                "cache-control": "must-revalidate, max-age=15770000"
            },
            "allowedRoles": ["authenticated"]
        },
        {
            "route": "/api/chat",
            "allowedRoles": ["authenticated"]
        },
        {
            "route": "/.auth/login/twitter",
            "statusCode": 404
        },
        {
            "route": "/.auth/login/github",
            "statusCode": 404
        },
        {
            "route": "/*",
            "allowedRoles": ["authenticated"]
        }
    ],
    "navigationFallback": {
        "rewrite": "index.html",
        "exclude": ["/images/*.{png,jpg,gif}", "/css/*", "/favicon.ico", "/.well-known/*"]
    },
    "responseOverrides": {
        "401": {
            "statusCode": 302,
            "redirect": "/.auth/login/aad"
        },
        "404": {
            "rewrite": "index.html",
            "statusCode": 404
        }
    },
    "mimeTypes": {
        ".json": "application/json"
    },
    "auth": {
        "identityProviders": {
            "azureActiveDirectory": {
                "userDetailsClaim": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name",
                "registration": {
                    "openIdIssuer": "https://login.microsoftonline.com/90a62222-736e-4122-bcfd-1d287ca59156",
                    "clientIdSettingName": "AZURE_CLIENT_ID",
                    "clientSecretSettingName": "AZURE_CLIENT_SECRET"
                }
            }
        }
    },
    "globalHeaders": {
        "Strict-Transport-Security": "max-age=31536000; includeSubDomains"
    }
}
